<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ThemeStylesIcons" parent="Theme.Material3.Dark">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/blue_primary_color</item>
        <item name="colorPrimaryVariant">@color/blue_variant</item>
        <item name="colorOnPrimary">@color/neutral_white</item>
        <item name="android:textColorLink">@color/links</item>
        <item name="android:textColorPrimary">@color/neutral_white</item>
    </style>

    <style name="SpinnerDatePickerDialog" parent = "ThemeOverlay.Material3.Dark">
        <item name="android:datePickerStyle">@style/SpinnerDatePickerStyle</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="SpinnerDatePickerStyle" parent = "android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <color name="corSelecionada">@color/cinza_transparente</color>
</resources>
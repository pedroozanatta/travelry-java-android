<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ThemeStylesIcons" parent="Theme.Material3.Light">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue_primary_color</item>
        <item name="colorPrimaryVariant">@color/blue_variant</item>
        <item name="colorOnPrimary">@color/neutral_white</item>

        <item name="android:textColorLink">@color/blue_primary_color</item>
    </style>
    
    <style name="SpinnerDatePickerDialog" parent = "ThemeOverlay.Material3.Light">
        <item name="android:datePickerStyle">@style/SpinnerDatePickerStyle</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="SpinnerDatePickerStyle" parent = "android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>



    <color name="corSelecionada">@color/azul_transparente</color>
</resources>